import javax.swing.*;
import java.awt.*;
/**
 Pie.java
 Support class provided for Part 2, Lab5, COMP160 2019 
 */
public class Pie extends JPanel{
    /** constructor method, sets up the Pie panel */
  public Pie(){
    setPreferredSize(new Dimension(300,300));
    setBackground(Color.white);
  }
 
    
    /** all drawing code goes in the paint method, which is called automatically*/
    public void paintComponent (Graphics page){
      super.paintComponent(page);
      
    final int MID = 150;
    final int TOP = 150;
    page.fillArc(MID - 50,TOP - 50, MID, TOP, 90, 360);
    
    page.setColor(Color.blue);
    page.fillArc(MID - 50,TOP - 50, MID, TOP, 45, 45);
    
    page.setColor(Color.pink);
    page.fillArc(MID - 50,TOP - 50, MID, TOP, 90, 45);
    
    page.setColor(Color.cyan);
    page.fillArc(MID - 50,TOP - 50, MID, TOP, 135, 45);
    
    page.setColor(Color.green);
    page.fillArc(MID - 50,TOP - 50, MID, TOP, 180, 45);
    
    page.setColor(Color.orange);
    page.fillArc(MID - 50,TOP - 50, MID, TOP, 225, 45);
    
    page.setColor(Color.yellow);
    page.fillArc(MID - 50,TOP - 50, MID, TOP, 270, 45);
    
    page.setColor(Color.red);
    page.fillArc(MID - 50,TOP - 50, MID, TOP, 315, 45);
    
    page.setColor(Color.white);
    page.fillArc(MID - 50,TOP - 50, MID, TOP, 360, 45);
    
    
    
    
      //your pie chart code goes here
    }
}
